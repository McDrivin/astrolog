<div class="container">
  <h1> Launches </h1>

<form novalidate="novalidate" class="simple_form search" action="/launches" accept-charset="UTF-8" method="get">
  <div class="search-form-control form-group">
    <input class="form-control string required" type="text" name="query" id="search_query" value="<%= params[:query]   %>"/>
    <button name="button" type="submit" class="btn btn-flat">
      <i class="fas fa-search"></i> Search
    </button>
  </div>
</form>

  <ul class="list-group">
    <% @launches.each do |launch| %>
      <div class="wide-card mb-3">
        <%= image_tag "https://api.mapbox.com/styles/v1/mapbox/streets-v12/static/#{launch.pad_lng},#{launch.pad_lat},10.20,0,60/400x400?access_token=#{ENV["MAPBOX_API_KEY"]}" %>
          <div class="wide-card-infos">
            <h2><%= launch.name %></h2>
            <p><%= launch.agenc %></p>
            <h5 data-controller="countdown" data-countdown-date-value="<%= launch.window_start.to_s %>"></h5>
            <%= link_to "More info", launch_path(launch), class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </ul>
</div>
