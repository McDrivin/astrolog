<div class="container">
  <h1> Launches </h1>
  <ul class="list-group">
    <% @launches.each do |launch| %>
      <div class="card-product mb-3">
        <div class="card-product-infos">
          <h2><%= launch.name %></h2>
          <p><%= launch.agenc %></p>
          <h5 data-controller="countdown" data-countdown-date-value="<%= launch.window_start.to_s %>"></h5>
          <%= link_to "More info", launch_path(launch), class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </ul>
</div>
