<div class="container">
  <h1> Agencies and Companies in the space industry </h1>

  <form novalidate="novalidate" class="simple_form search" action="/agencies" accept-charset="UTF-8" method="get">
  <div class="search-form-control form-group">
    <input class="form-control string required" type="text" name="query" id="search_query" value="<%= params[:query]   %>"/>
    <button name="button" type="submit" class="btn btn-flat">
      <i class="fas fa-search"></i> Search
    </button>
  </div>
</form>

  <div class="row gx-4 justify-content-between">
    <% @agencies.each do |agency| %>
      <div class="col-3">
        <div class="card">
          <div class="card-img-top">
            <%= image_tag agency.logo_url.nil? ? "placeholder-image.png" : agency.logo_url, class: "card-img-top" %>
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= agency.name %></h5>
            <p class="card-text"><%= agency.country_code.split(',').first(3).join(" | ") %></p>
            <%= link_to "More info", agency_path(agency), class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

