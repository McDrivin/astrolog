<div class="container">
  <h1> Agencies and Companies in the space industry </h1>
  <ul class="list-group">
    <% @agencies.each do |agency| %>
      <div class="card-product mb-3">
        <%= image_tag agency.logo_url.nil? ? "placeholder-image.png" : agency.logo_url %>
        <div class="card-product-infos">
          <h2><%= agency.name %></h2>
          <h6><%= agency.country_code %></h6>
          <%= link_to "More info", agency_path(agency), class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </ul>
</div>
