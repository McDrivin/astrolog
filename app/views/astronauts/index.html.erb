<div class="container text-center">
  <hr>
  <h1 class="fw-bold">ASTRONAUTS</h1>
  <hr>
  <form novalidate="novalidate" class="simple_form search mb-3" action="/astronauts" accept-charset="UTF-8" method="get">
    <div class="search-form-control form-group">
      <input class="form-control string required" type="text" name="query" id="search_query" value="<%= params[:query]   %>"/>
      <button name="button" type="submit" class="btn btn-primary">
        <i class="fas fa-search"></i> Search
      </button>
    </div>
  </form>
  <div class="row g-3 justify-content-between">
    <% @astronauts.each do |astronaut| %>
      <div class="col-3">
        <div class="card small-card">
          <div class="card-img-top overflow-hidden small-card-img">
            <%= image_tag astronaut.profile_image.nil? ? "placeholder-image.png" : astronaut.profile_image %>
          </div>
          <div class="card-body">
            <h5 class="card-title text-truncate"><%= astronaut.name %></h5>
            <p class="card-text"><%= astronaut.status %></p>
            <p class="card-text text-truncate"><%= astronaut.agency %></p>
            <%= link_to "More info", astronaut_path(astronaut), class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div class="container mt-3">
  <%= paginate @astronauts, theme: 'bootstrap-5', pagination_class: "pagination-sm flex-wrap justify-content-center" %>
</div>
