<div class="container">

  <hr>
    <h1 class="fw-bold text-center">UPCOMING EVENTS</h1>
  <hr>
  
  <form novalidate="novalidate" class="simple_form search" action="/events" accept-charset="UTF-8" method="get">
  <div class="search-form-control form-group">
    <input class="form-control string required" type="text" name="query" id="search_query" value="<%= params[:query]   %>"/>
    <button name="button" type="submit" class="btn btn-flat">
      <i class="fas fa-search"></i> Search
    </button>
  </div>
</form>

  <ul class="list-group">
    <% @events.each do |event| %>
      <div class="wide-card mb-3">
        <%= image_tag event.feature_image %>
        <div class="wide-card-infos">
          <h2><%= event.name %></h2>
          <p><%= event.date.strftime('%B %e %Y') %> | <%= event.event_type %></p>
          <h6 class="mt-2"><%= event.location.nil? ? "N/A" : event.location %></h6>
          <h6 data-controller="countdown" data-countdown-date-value="<%= event.date.to_s %>"></h6>
          <%= link_to "More info", event_path(event), class: "btn btn-primary mt-2" %>
        </div>
      </div>
    <% end %>
  </ul>
</div>
<div class="container mt-3">
  <%= paginate @events, theme: 'bootstrap-5', pagination_class: "pagination-sm flex-wrap justify-content-center" %>
</div>
