<div class="container">
  <h1> Events </h1>
  <ul class="list-group">
    <% @events.each do |event| %>
      <div class="card-product mb-3">
        <%= image_tag event.feature_image %>
        <div class="card-product-infos">
          <h2><%= event.name %></h2>
          <p><%= event.date.to_date %> | <%= event.event_type %></p>
          <h6 class="mt-2"><%= event.location %></h6>
          <%= link_to "More info", event_path(event), class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </ul>
</div>
